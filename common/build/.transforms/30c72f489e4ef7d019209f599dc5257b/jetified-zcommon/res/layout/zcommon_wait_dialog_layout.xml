<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/zcommon_transparente"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_zc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/zcommon_margin_padding_size_medium"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/pb_zc_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/zcommon_transparente"
        android:indeterminate="true"
        android:progressBackgroundTint="@android:color/black" />

    <TextView
        android:id="@+id/tv_zc_cancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zcommon_margin_padding_size_medium"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@android:color/white" />
</LinearLayout>