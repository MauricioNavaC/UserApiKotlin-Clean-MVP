<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/zcommon_margin_padding_size_medium">

    <Button
        android:id="@+id/btnShowError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zcommon_general_error_message"/>

    <Button
        android:id="@+id/btnShowNoConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zcommon_no_connection_message"/>

    <Button
        android:id="@+id/btnShowNoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zcommon_no_data_message"/>

    <Button
        android:id="@+id/btnShowCustomMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/zcommon_custom_message"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zcommon_colorPrimaryText">

            <LinearLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tvTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="dummyText"/>

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>