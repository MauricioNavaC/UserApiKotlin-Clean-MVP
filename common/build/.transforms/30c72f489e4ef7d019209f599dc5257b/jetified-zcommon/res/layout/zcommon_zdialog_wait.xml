<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/TextViewDialog.Title.Wait"
        android:id="@+id/tvTitle"
        android:gravity="center"
        android:layout_marginBottom="@dimen/zcommon_margin_padding_size_medium"
        tools:text="Title"
        tools:textColor="@android:color/black"
        />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/progressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/zcommon_margin_padding_size_medium"
        android:background="@android:color/transparent"
        android:indeterminate="true"
        android:progressBackgroundTint="@android:color/black"
        />

    <TextView
        style="@style/TextViewDialog.Message.Wait"
        android:id="@+id/tvMessage"
        android:gravity="center"
        android:layout_marginBottom="@dimen/zcommon_margin_padding_size_xxlarge"
        tools:text="Message"
        tools:textColor="@android:color/black"
        />
    <Button
        style="@style/ButtonDialog.Wait"
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cancelar" />

</LinearLayout>