<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/zcommon_margin_padding_size_medium"
    app:cardCornerRadius="@dimen/zcommon_margin_padding_size_medium">

    <LinearLayout
        android:id="@+id/llFingerprintMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_fingerprint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/zcommon_margin_large"
            android:padding="@dimen/zcommon_margin_padding_size_mini"
            app:srcCompat="@drawable/zcommon_ic_fingerprint" />

        <LinearLayout
            android:id="@+id/llFingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_fingerprint"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/zcommon_dialog_title"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Touch ID for Zeus" />

            <TextView
                android:id="@+id/item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zcommon_margin_xxsmall"
                android:gravity="center"
                android:textColor="@color/zcommon_dialog_subtitle"
                android:textSize="13sp"
                tools:text="Inicia sesión rápidamente con tu huella digital" />

            <TextView
                android:id="@+id/item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/zcommon_margin_xxsmall"
                android:layout_marginBottom="@dimen/zcommon_margin_padding_size_mini"
                android:gravity="center"
                android:textColor="@color/zcommon_dialog_status" />

        </LinearLayout>

        <!--<TextView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_view"
            android:layout_marginStart="@dimen/zcommon_margin_xsmall"
            android:layout_marginTop="@dimen/zcommon_margin_large"
            android:layout_marginEnd="@dimen/zcommon_margin_large"
            android:gravity="center"
            android:textColor="@color/zcommon_dialog_description"
            android:visibility="gone"
            tools:text="TEST" />-->


